@model IEnumerable<HanStore.MvsWebUI.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanelNavbar.cshtml";
}

<div class="container mt-5">

    <h2>Kategori Listesi</h2>
    <hr />
    <p>
        @Html.ActionLink("Kategori Oluştur", "Create", null, new {@class="btn btn-primary"})
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Kategori Adı
            </th>
            <th>
                Kategori Açıklaması
            </th>
            <th style="width: 12%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id },new { @class = "btn btn-primary"})
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id },new { @class = "btn btn-danger"})
                </td>
            </tr>
        }

    </table>

</div>