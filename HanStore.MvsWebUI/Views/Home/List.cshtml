@using HanStore.MvsWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<link rel="stylesheet" href="~/theme/css/style.css" />

@Html.Action("GetAdvert", "Home")





<div class="container container-fluid pb-5 mt-5">


    <div class="row mt-3">
        <!-- Sol Menü (List Group) -->
        <div class="col-md-3">

            <div id="category-name">
                Categories
            </div>

            @Html.Action("GetCategories", "Home")
        </div>

        <!-- Sağ Kısım (Ürün Listesi) -->
        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <br />
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-triangle fa-3" aria-hidden="true"></i>
                    Bu kategoride ürün bulunamadı.
                </div>
            }
            else
            {
                <div style="font-size: 18px; margin-left: 2em">
                    @Model.Count() adet ürün bulundu.
                </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>