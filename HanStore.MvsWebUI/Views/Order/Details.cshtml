@using HanStore.MvsWebUI.Models;
@using HanStore.MvsWebUI.Entity;
@model OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminPanelNavbar.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detayı</h2>
            <hr />

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

        <dl class="row">

            <dt class="col-sm-3">Kullanıcı Adı</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Sipariş Durumu </dt>
            <dd class="col-sm-9">
                <dl class="row">
                    @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                    {
                        @Html.HiddenFor(i => i.OrderId)
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.EnumDropDownListFor(i => i.OrderState, "Sipariş Durumunu Seçin", new { @class = "form-control" })
                            </dt>
                            <dd class="col-sm-3">
                                <button type="submit" class="btn btn-secondary">Güncelle</button>
                            </dd>
                        </dl>
                    }
                </dl>
            </dd>

            <dt class="col-sm-3">Sipariş Id</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>

            <dt class="col-sm-3">Sipariş Numarası</dt>
            <dd class="col-sm-9">@Model.OrderNumber</dd>

            <dt class="col-sm-3">Toplam Fiyat</dt>
            <dd class="col-sm-9">@Model.Total.ToString("c")</dd>

            <dt class="col-sm-3">Sipariş Tarihi</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Teslimat Adresi</dt>
            <dd class="col-sm-9">
                @Model.AdresBasligi
                <hr />
                @Model.Sehir - @Model.Semt - @Model.Mahalle
                <br />
                @Model.Adres
                <br />
            </dd>

            <hr />

            <dt class="col-sm-3">Ürünler</dt>
            <dd class="col-sm-9">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün Resmi</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Adedi</th>
                            <th>Ürün Fiyatı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderLines)
                        {
                            <tr>
                                <td style="vertical-align: middle">
                                    <img src="~/Upload/@item.Image" style="width: 90px" />
                                </td>

                                <td style="vertical-align: middle">
                                    @item.ProductName
                                </td>

                                <td style="vertical-align: middle">
                                    @item.Quantity
                                </td>

                                <td style="vertical-align: middle">
                                    @item.Price.ToString("c")
                                </td>

                                <td style="vertical-align: middle">
                                    <a class="btn btn-secondary" href="/Home/Details/@item.ProductId">Ürün Detayları</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </dl>
        </div>
    </div>
</div>
