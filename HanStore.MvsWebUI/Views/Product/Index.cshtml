@model IEnumerable<HanStore.MvsWebUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanelNavbar.cshtml";
}

<div class="container mt-5">

    <h2>Ürün Listesi</h2>
    <hr/>

    <p>
        @Html.ActionLink("Ürün Oluştur", "Create", null , new {@class = "btn btn-primary"})
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAd)
            </th>
            <th style="width: 18%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <td>
                        <img src="/Upload/@item.Image" width="70" />
                    </td>
                }
                else
                {
                    <td>
                        <img src="/Upload/def.jpg" width="70" />
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                @if (item.IsApproved)
                {
                    <td>
                        <i class="fa fa-check-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }
                else
                {
                    <td>
                        <i class="fa fa-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }

                @if (item.IsHome)
                {
                    <td>
                        <i class="fa fa-check-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }
                else
                {
                    <td>
                        <i class="fa fa-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }

                @if (item.IsAd)
                {
                    <td>
                        <i class="fa fa-check-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }
                else
                {
                    <td>
                        <i class="fa fa-square-o fa-1" aria-hidden="true"></i>
                    </td>
                }
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mt-1" })
                </td>
            </tr>
        }

    </table>

</div>