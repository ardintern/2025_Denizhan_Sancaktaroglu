<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <div class="d-flex flex-column min-vh-100">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-body" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand fs-3" href="/Home">HanStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "") fs-5"
                               href="/Home">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "List" ? "active" : "") fs-5"
                               href="/Home/List">Liste</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "AboutUs" ? "active" : "") fs-5"
                               href="/Home/AboutUs">Hakkımızda</a>
                        </li>
                    </ul>

                    <!-- GİRİŞ/KAYIT veya KULLANICI DROPDOWN (en sağa yaslı) -->
                    <ul class="navbar-nav mb-2 mb-lg-0" style="color: white">
                        @if (User.IsInRole("superadmin"))
                        {
                            <span>SuperAdmin</span>
                        }
                        else if (User.IsInRole("admin"))
                        {
                            <span>Admin</span>
                        }
                    </ul>
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @Html.Partial("_LoginPartial")
                    </ul>

                    <!-- SEPET ÖZETİ -->
                    <div class="ms-3">
                        @Html.Action("Summary", "Cart")
                    </div>
                </div>
            </div>
        </nav>




        <main class="flex-grow-1">
            @RenderBody()
        </main>



        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top" style="margin-top: 10vh">
                <p class="col-md-4 mb-0 text-body-secondary">© 2025 HanStore</p>

                <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none" aria-label="Bootstrap">
                    <svg class="bi me-2" width="40" height="32" aria-hidden="true">
                        <use xlink:href="#bootstrap"></use>
                    </svg>
                </a>

                <ul class="nav col-md-4 justify-content-end">
                    <li class="nav-item"><a href=@Url.Action("Index", "Home") class="nav-link px-2 text-body-secondary">Home</a></li>
                    <li class="nav-item"><a href=@Url.Action("AboutUs", "Home") class="nav-link px-2 text-body-secondary">Hakkımızda</a></li>
                </ul>
            </footer>
        </div>
    </div>




            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
            <script src="/theme/js/holder.min.js" type="text/javascript"></script>

</body>

</html>
